{
    "manifest_version": 3,
    "name": "Motivation on the Go",
    "version": "1.0",
    "description": "A Chrome Extension for Quick Inspiration",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://zenquotes.io/*"
    ]
}